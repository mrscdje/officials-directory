<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.mrsc.officialsdirectory"
    versionCode = "21"
    version     = "2.0.1" >

  <!-- versionCode is optional and Android only -->

  <name>MRSC Officials Directory</name>

  <description>
    This is a directory of Washington city and town information and officials
  </description>

  <author href="http://www.mrsc.org" email="dedlin@mrsc.org">
    Don Edlin
  </author>

  <!-- ios 7-->
  <!-- iPhone / iPod Touch  -->
  <icon src="icon-60.png" gap:platform="ios" width="60" height="60" />
  <icon src="icon-60@2x.png" gap:platform="ios" width="120" height="120" />
  <!-- iPad -->
  <icon src="icon-76.png" gap:platform="ios" width="76" height="76" />
  <icon src="icon-76@2x.png" gap:platform="ios" width="152" height="152" />
  <!-- Settings Icon -->
  <icon src="icon-small.png" gap:platform="ios" width="29" height="29" />
  <icon src="icon-small@2x.png" gap:platform="ios" width="58" height="58" />
  <!-- Spotlight Icon -->
  <icon src="icon-40.png" gap:platform="ios" width="40" height="40" />
  <icon src="icon-40@2x.png" gap:platform="ios" width="80" height="80" />

  <!-- ios 6-->
  <!-- iPhone / iPod Touch -->
  <!-- default icon -->
  <icon src="icon.png" gap:platform="ios" width="57" height="57" />
  <icon src="icon@2x.png" gap:platform="ios" width="114" height="114" />
  <!-- iPad -->
  <icon src="icon-72.png" gap:platform="ios" width="72" height="72" />
  <icon src="icon-72@2x.png" gap:platform="ios" width="144" height="144" />
  <!-- iPad Spotlight and Settings Icon -->
  <icon src="icon-50.png" gap:platform="ios" width="50" height="50" />
  <icon src="icon-50@2x.png" gap:platform="ios" width="100" height="100" />

  <!-- Android icons -->
  <icon src="res/drawable-ldpi/ic_launcher.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="res/drawable-mdpi/ic_launcher.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="res/drawable-hdpi/ic_launcher.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="res/drawable-xhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xhdpi" />
  <icon src="res/drawable-xxhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xxhdpi" />
  <icon src="res/drawable-xxxhdpi/ic_launcher.png" gap:platform="android" gap:qualifier="xxxhdpi" />


  <preference name="phonegap-version" value="cli-5.1.1" />
  <preference name="Fullscreen" value="true" />
  <preference name="StatusBarOverlaysWebView" value="false" />
  <preference name="webviewbounce" value="false" />

  <gap:splash src="splash.png" />

  <!-- iPhone and iPod touch -->
  <gap:splash src="splash.png" gap:platform="ios" width="320" height="480" />
  <gap:splash src="Default@2x.png" gap:platform="ios" width="640" height="960" />

  <!-- iPhone 5 / iPod Touch (5th Generation) -->
  <gap:splash src="Default-568h@2x.png" gap:platform="ios" width="640" height="1136" />

  <!-- iPad -->
  <gap:splash src="Default-Portrait.png" gap:platform="ios" width="768" height="1024" />
  <gap:splash src="Default-Landscape.png" gap:platform="ios" width="1024" height="768" />

  <!-- Retina iPad -->
  <gap:splash src="Default-Portrait@2x.png" gap:platform="ios" width="1536" height="2048" />
  <gap:splash src="Default-Landscape@2x.png" gap:platform="ios" width="2048" height="1536" />
  
  <!-- still need to add android splash screens-->


  <!-- android preferences for splash scrren.-->
  <preference name="SplashScreen" value="splash" />
  <preference name="SplashScreenDelay" value="5000" />

  <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" version="1.2.0" />
  <!-- didn't have inappbrowser for IOS -->
  <gap:plugin name="cordova-plugin-inappbrowser" source="npm" /> 
  
  <!-- android features so all features won't be enabled-->
  <feature name="http://api.phonegap.com/1.0/network" />

</widget>